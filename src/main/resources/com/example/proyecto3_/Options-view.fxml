<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20" prefWidth="400" prefHeight="500"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.proyecto3_.controller.OptionsController">

    <Text text="Select Number of Bots"
          style="-fx-font-size: 28; -fx-font-weight: bold;"/>

    <Button text="Play against 1 Bot"
            onAction="#handleStartGame"
            userData="1"
            style="-fx-min-width: 250; -fx-min-height: 60; -fx-font-size: 16;"/>

    <Button text="Play against 2 Bots"
            onAction="#handleStartGame"
            userData="2"
            style="-fx-min-width: 250; -fx-min-height: 60; -fx-font-size: 16;"/>

    <Button text="Play against 3 Bots"
            onAction="#handleStartGame"
            userData="3"
            style="-fx-min-width: 250; -fx-min-height: 60; -fx-font-size: 16;"/>

    <Button text="Back to Menu"
            onAction="#goBackToMenu"
            style="-fx-min-width: 250; -fx-min-height: 50; -fx-font-size: 14;"/>
</VBox>